<%= form_with(model: event) do |f| %>

  <%= render "shared/errors", object: event %>

  <%= f.label :name %>
  <%= f.text_area :name, rows: 4, autofocus: true %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 12 %>

  <%= f.label :time %>
  <%= f.datetime_select :starts_at, {ampm: true}, {class: "datetime"} %>

  <%= f.label :eve_image %>
  <%= f.file_field :eve_image %>

  <%= f.submit %>
<% end %>
